@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<div style="width: 200px; height: 200px; background: linear-gradient(to right, red 50%, white 50%);" @onclick="OnClick">
</div>


<input type="text" value="@textValue" @oninput="OnInputChanged" placeholder="Bir şeyler yaz..." />
<p>Şu anki değer: @textValue</p>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void OnClick()
    {
        Console.WriteLine("Div clicked");
    }

    private string textValue = "";

    private void OnInputChanged(ChangeEventArgs e)
    {
        textValue = e.Value?.ToString() ?? "";
        Console.WriteLine($"Yeni değer: {textValue}");
    }
}
