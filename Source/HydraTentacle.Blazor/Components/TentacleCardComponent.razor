<div class="card shadow-sm h-100">
    <div class="card-header bg-transparent border-0 pt-3">
        <h5 class="card-title fw-bold text-primary">@Title</h5>
    </div>
    <div class="card-body text-center d-flex align-items-center justify-content-center p-4">
        <img src="@ImageSource" class="img-fluid" style="max-height: 120px;" alt="@Title Icon">
    </div>
    <div class="card-footer bg-transparent border-0 pb-3 text-end">
        <a href="@TargetUrl" class="btn btn-primary rounded-pill px-4">
            @ButtonText <i class="bi bi-arrow-right list-inline-item ms-1"></i>
        </a>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "Title";

    [Parameter]
    public string ImageSource { get; set; } = "";

    [Parameter]
    public string TargetUrl { get; set; } = "#";

    [Parameter]
    public string ButtonText { get; set; } = "Show";
}
